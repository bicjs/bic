{
  "name": "bic-repo",
  "description": "Bic website packaging framework repository.",
  "version": "0.0.0-1",
  "author": {
    "name": "Ray Patterson",
    "email": "github.raypatterson@gmail.com"
  },
  "bugs": "https://github.com/bicjs/bic/issues/",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    },
    "save": false
  },
  "dependencies": {},
  "devDependencies": {
    "commitizen": "~2.9.5",
    "cz-conventional-changelog": "~2.0.0",
    "eslint": "~3.17.1",
    "eslint-config-xo": "~0.17.0",
    "fixpack": "~2.3.1",
    "husky": "~0.13.2",
    "john": "~1.1.0",
    "lerna": "~2.0.0-beta.38",
    "linklocal": "~2.8.0",
    "npm-link-check": "~1.2.0",
    "nsp": "~2.6.3",
    "ntl": "~1.2.0",
    "updtr": "~0.2.3"
  },
  "engines": {
    "node": ">= 6.10.0",
    "npm": ">= 3.10.0"
  },
  "homepage": "https://github.com/bicjs/bic/README.md",
  "keywords": [
    "app",
    "bic",
    "bicjs",
    "build",
    "framework",
    "webpack",
    "website"
  ],
  "license": "MIT",
  "main": ".",
  "repository": "https://github.com/bicjs/bic/",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "npm cache clean && lerna clean --yes",
    "commit": "git-cz",
    "dev": "lerna exec --scope demo -- npm run dev",
    "fixpack": "fixpack & lerna exec -- fixpack",
    "john": "john & lerna exec -- john",
    "link": "lerna run link",
    "lint": "lerna exec --ignore demo -- eslint --fix .",
    "ls": "ntl .",
    "postinstall": "lerna exec -- npm install && npm run link && npm run tidy",
    "precommit": "npm run lint",
    "prepush": "npm run test",
    "preversion": "npm-link-check",
    "reinstall": "npm run clean && npm install",
    "security": "lerna exec --ignore demo -- nsp check --output summary",
    "test": "lerna run test",
    "tidy": "npm run john & npm run fixpack",
    "unlink": "lerna run unlink",
    "upgrade": "updtr & lerna exec -- updtr"
  }
}
