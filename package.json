{
  "name": "bic-repo",
  "description": "Bic website packaging framework repository.",
  "version": "0.0.0-1",
  "author": {
    "name": "Ray Patterson",
    "email": "github.raypatterson@gmail.com"
  },
  "bugs": "https://github.com/bicjs/bic/issues/",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "commitizen": "^3.0.4",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.8.0",
    "eslint-config-xo": "^0.25.0",
    "fixpack": "2.3.1",
    "husky": "^1.1.3",
    "john": "1.1.0",
    "lerna": "^3.4.3",
    "linklocal": "^2.8.2",
    "nsp": "^3.2.1",
    "ntl": "^3.0.0"
  },
  "engines": {
    "node": ">= 6",
    "npm": ">= 3"
  },
  "homepage": "https://github.com/bicjs/bic/README.md",
  "keywords": [
    "app",
    "bic",
    "bicjs",
    "build",
    "framework",
    "webpack",
    "website"
  ],
  "license": "MIT",
  "main": ".",
  "private": true,
  "repository": "https://github.com/bicjs/bic/",
  "scripts": {
    "clean": "lerna clean --yes",
    "cm": "git-cz",
    "demo": "lerna exec --scope demo -- yarn dev",
    "demo:build": "lerna exec --scope demo -- yarn build:preview",
    "fixpack": "fixpack & lerna exec -- fixpack",
    "john": "john & lerna exec -- john",
    "linklocal": "lerna exec --scope demo -- linklocal --recursive",
    "linklocal:rm": "lerna exec --scope demo -- linklocal --recursive --unlink",
    "lint": "lerna exec --ignore demo -- eslint --fix .",
    "ls": "ntl .",
    "precommit": "yarn lint",
    "prepush": "yarn test",
    "preversion": "npm-link-check",
    "security": "lerna exec --ignore demo -- nsp check --output summary",
    "setup": "yarn clean && yarn && yarn linklocal && yarn tidy",
    "test": "lerna run test",
    "tidy": "yarn john & yarn fixpack",
    "upgrade": "yarn linklocal:rm && yarn upgrade-interactive --latest && yarn linklocal",
    "upgrade:force": "yarn linklocal:rm && yarn upgrade --latest && yarn linklocal"
  },
  "workspaces": {
    "packages": [
      "packages/**/*"
    ]
  }
}
